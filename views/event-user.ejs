<%- include('partials/header') %>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Secret Santa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/user/<%= currentUserId %>">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/create-event">Create Event</a>
                    </li>
                </ul>
                <form class="d-flex ms-auto" action="/logout?_method=DELETE" method="post">
                    <button class="btn text-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (currentUserId === userId) { %>
            <h1>Your Wishlist</h1>
        <% } else { %>
            <h1><%= userName %>'s Wishlist</h1>
        <% } %>
        <ul>
            <% for (let item of items) { %>
                <li>
                    <form action="/event/<%= eventId %>/<%= userId %>/<%= item.id %>/delete?_method=DELETE"
                          method="post">
                        <%= item.name %>
                        $<%= item.price %>
                        <button style="background-color: transparent; outline: none; border: none; background-repeat: no-repeat; cursor: pointer;">
                            &times
                        </button>
                    </form>
                </li>
            <% } %>
        </ul>
        <% if (currentUserId === userId) { %>
            <p>Your recipient is <a href="/event/<%= eventId %>/<%= recipientId %>"><%= recipientName %></a></p>
            <h2>Add item</h2>
            <form action="/event/<%= eventId %>/<%= userId %>" method="post">
                <section>
                    <label for="name">Item name: </label>
                    <input id="name" type="text" placeholder="item name" name="name">
                </section>
                <section>
                    <label for="price">Price: </label>
                    <input id="price" type="text" placeholder="price" name="price">
                </section>
                <button>Add item</button>
            </form>
        <% } %>
    </div>
<%- include('partials/footer') %>