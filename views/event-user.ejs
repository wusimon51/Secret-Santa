<h1><%= userName %>'s Wishlist</h1>
<ul>
    <% for (let item of items) { %>
        <li>
            <%= item.name %>
            <br>
            <%= item.price %>
            <form>

            </form>
        </li>
    <% } %>
</ul>
<% if (currentUserId === userId) { %>
    <h2>Add item</h2>
    <form action="/santa/event/<%= eventId %>/<%= userId %>" method="post">
        <section>
            <label for="name">Item name: </label>
            <input id="name" type="text" placeholder="item name" name="name">
        </section>
        <section>
            <label for="price">Price: </label>
            <input id="price" type="text" placeholder="price" name="price">
        </section>
        <button>Add item</button>
    </form>
<% } %>