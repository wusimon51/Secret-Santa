<a href="/santa/create-event">Make an event</a>
<h1>Your Events</h1>
<ul>
    <% for (let event of events) { %>
    <li>
        <a href="/santa/event/<%= event.id %>/"><%= event.name %></a>
    </li>
    <% } %>
</ul>
<% if (invites.length !== 0) { %>
    <h2>Invites</h2>
    <ul>
        <% for (let invite of invites) { %>
            <li>
                <form action="/santa/user/<%= userId %>/invite/<%= invite.id %>" method="post">
                    <%= invite.id %>
                    <%= invite.message %>
                    <button>Accept</button>
                    <button formaction="/santa/user/<%= userId %>/invite/<%= invite.id %>?_method=DELETE" formmethod="post" type="submit">Decline</button>
                </form>
            </li>
        <% } %>
    </ul>
<% } %>